@page "/"
@inherits PokemonListBase

<h3>Pokemons Selected: @SelectedPokemonsCount</h3>

@if (Pokemons == null)
{
    <div class="spinner"></div>
}
else
{
    <input type="checkbox" id="showFooter" @bind="ShowFooter" >
    <label for="showFooter">Show Footer</label>
    <div class="card-deck">
        @foreach (var pokemon in Pokemons)
        {
            <DisplayPokemon Pokemon="pokemon" ShowFooter="ShowFooter" OnPokemonSelection="PokemonSelectionChanged" ></DisplayPokemon>
        }
    </div>
}