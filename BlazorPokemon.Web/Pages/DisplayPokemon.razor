@inherits DisplayPokemonBase

<div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
    <div class="card-header">
        <h5>@Pokemon.Name </h5>
    </div>
    <img class="card-img-top imageThumbnail" src="@Pokemon.PhotoPath" />
    @if(ShowFooter) {
        <div class="card-footer text-center">
            <a href="@($"Pokemondetails/{Pokemon.PokemonId}")" class="btn btn-primary m-1">View</a>
            <a href="#" class="btn btn-primary m-1">Edit</a>
            <a href="#" class="btn btn-danger m-1">Delete</a>
        </div>
    }
</div>