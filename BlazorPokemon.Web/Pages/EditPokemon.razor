@page "/editpokemon/{id}" 
@inherits EditPokemonBase

<EditForm Model="@Pokemon">
    <h3>Edit Pokemon</h3>
    <hr>
    <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label" >Name</label>
        <div class="col-sm-10">
            <InputText id="name" class="form-control" placeholder="Name" 
                        @bind-Value="Pokemon.Name"></InputText>
        </div>
    </div> 
    <div class="form-group row">
        <label for="typeOne" class="col-sm-2 col-form-label">Type One</label>
        <div class="col-sm-10">
            <CustomInputSelect id="typeOne" @bind-Value="Pokemon.TypeOneId" class="form-control" >
                  @foreach (var type in PokemonTypes)
                  {
                      <option value="@type.PokemonTypeId">@type.Value</option>
                  }          
            </CustomInputSelect>
        </div>
    </div>
    <div class="form-group row">
        <label for="typeTwo" class="col-sm-2 col-form-label">Type Two</label>
        <div class="col-sm-10">
            <CustomInputSelect id="typeTwo" @bind-Value="Pokemon.TypeTwoId" class="form-control" >
                  @foreach (var type in PokemonTypes)
                  {
                      <option value="@type.PokemonTypeId">@type.Value</option>
                  }          
            </CustomInputSelect>
        </div>
    </div>
    <div class="form-group row">
        <label for="gender" class="col-sm-2 col-form-label">Gendere</label>
        <div class="col-sm-10">
            <InputSelect id="gender" @bind-Value="Pokemon.Gender" class="form-control" >
                  @foreach (var gender in Enum.GetValues(typeof(Models.Gender)))
                  {
                      <option value="@gender">@gender</option>
                  }          
            </InputSelect>
        </div>
    </div>


</EditForm>




